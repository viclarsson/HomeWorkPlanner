<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instructions"
        android:id="@+id/instructions_header"
        style="@style/BoldWhiteText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About assigment"
        android:id="@+id/assignment_description"
        style="@style/WhiteText"
        android:layout_marginBottom="@dimen/global_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_parents"
        android:id="@+id/for_parents_header"
        style="@style/BoldWhiteText"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Information about assignment to parents"
        android:id="@+id/assignment_for_parents"
        style="@style/WhiteText"
        android:layout_marginBottom="@dimen/global_margin"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/workload_container"
        android:layout_marginBottom="@dimen/global_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suggested_time"
            android:layout_weight="1"
            style="@style/BoldWhiteText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx min"
            android:id="@+id/assignment_workload"
            style="@style/BoldWhiteText"/>

    </LinearLayout>

</LinearLayout>