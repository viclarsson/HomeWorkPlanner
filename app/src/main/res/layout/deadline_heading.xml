<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Monday"
        android:id="@+id/weekday"
        style="@style/day"
        android:layout_marginTop="@dimen/global_padding"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XX Mars"
        android:id="@+id/date"
        style="@style/date"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gridBlue"></FrameLayout>
    <FrameLayout
        style="@style/deadlineButton"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/deadlineButtonHeight"
        android:id="@+id/button">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/deadlineWrapper">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                style="@style/deadlineIcon"
                android:id="@+id/icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/free"
                android:id="@+id/subject"
                style="@style/deadline"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>