                    android:id="@+id/deadlineThursday"
                    style="@style/deadline"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Friday"
            style="@style/day"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX Mars"
            android:id="@+id/dateFriday"
            style="@style/date"/>
        <FrameLayout
            style="@style/deadlineButton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/buttonFriday">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/deadlineWrapper">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    style="@style/deadlineIcon"
                    android:id="@+id/iconFriday"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:id="@+id/deadlineFriday"
                    style="@style/deadline"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>

