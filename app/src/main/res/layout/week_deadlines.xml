<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A38787">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/monday"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/tuesday"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/wednesday"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/thursday"
            android:id="@+id/textView4" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/friday"
            android:id="@+id/textView5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.0">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/dateMonday"
            android:id="@+id/date_monday" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/dateTuesday"
            android:id="@+id/date_tuesday" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/dateWednesday"
            android:id="@+id/date_wednesday" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/dateThursday"
            android:id="@+id/date_thursday" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".40"
            android:text="@string/dateFriday"
            android:id="@+id/date_friday" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noDeadline"
            android:textSize="10dp"
            android:layout_weight=".40"
            android:id="@+id/buttonMonday" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noDeadline"
            android:textSize="10dp"
            android:layout_weight=".40"
            android:id="@+id/buttonTuesday" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noDeadline"
            android:textSize="10dp"
            android:layout_weight=".40"
            android:id="@+id/buttonWednesday" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noDeadline"
            android:textSize="10dp"
            android:layout_weight=".40"
            android:id="@+id/buttonThursday" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/noDeadline"
            android:textSize="10dp"
            android:layout_weight=".40"
            android:id="@+id/buttonFriday" />


    </LinearLayout>


</LinearLayout>

