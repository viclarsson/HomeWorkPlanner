            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX Mars"
            android:id="@+id/dateTuesday"
            style="@style/date"/>
        <FrameLayout
            style="@style/deadlineButton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/buttonTuesday">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/deadlineWrapper">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    style="@style/deadlineIcon"
                    android:id="@+id/iconTuesday"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/free"
                    android:id="@+id/deadlineTuesday"
                    style="@style/deadline"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Wednesday"
            style="@style/day"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XX Mars"
            android:id="@+id/dateWednesday"
            style="@style/date"/>
        <FrameLayout
            style="@style/deadlineButton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/buttonWednesday">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/deadlineWrapper">
                <ImageView
