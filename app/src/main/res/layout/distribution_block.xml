<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/distribution_block"
    android:layout_weight="0.25"
    android:padding="@dimen/bar_chart_padding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/green"
            android:id="@+id/bar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                style="@style/smallText"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="1dp"
                android:id="@+id/bar_text"
                />

            </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/green_darken"
            android:id="@+id/bar_darken">

            <TextView
                android:id="@+id/bar_text_darken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                style="@style/smallText"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="1dp"/>

            </FrameLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/bar_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject"
        style="@style/smallText"
        android:textAllCaps="true"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/bar_chart_padding"/>

</LinearLayout>