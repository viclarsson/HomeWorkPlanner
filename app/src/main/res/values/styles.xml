<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="menuTitle" parent="WhiteText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="baseButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="purpleButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtnpurple_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greenButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtngreen_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="redButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtnred_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="orangeButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtnorange_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="day" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="date" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/global_padding</item>
    </style>

    <style name="deadline" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="deadlineWrapper" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="deadlineButton" parent="WhiteText">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/lightGray</item>
    </style>
    <style name="deadlineIcon" parent="WhiteText">
        <item name="android:src">@drawable/happy</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="smallText" parent="WhiteText">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scheduleList">
        <item name="android:layout_weight">0.2</item>
        <item name="android:divider">@color/lightGray</item>
        <item name="android:dividerHeight">0px</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/darkBlue</item>
    </style>
</resources>
