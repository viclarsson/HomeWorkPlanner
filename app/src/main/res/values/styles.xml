<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="menuTitle" parent="WhiteText">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="baseButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="purpleButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtnpurple_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greenButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtngreen_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="redButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtnred_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="orangeButton" parent="baseButton">
        <item name="android:background">@drawable/flatbtnorange_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="day" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_marginTop">@dimen/deadlineHeadingPadding</item>

    </style>

    <style name="date" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_marginBottom">@dimen/deadlineHeadingPadding</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="dragButtonText" parent="WhiteText">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:layout_marginLeft">@dimen/deadlineHeadingPadding</item>
    </style>

    <style name="dragButton" parent="WhiteText">
        <item name="android:paddingTop">@dimen/deadlineHeadingPadding</item>
        <item name="android:paddingBottom">@dimen/deadlineHeadingPadding</item>
    </style>
    <style name="dragButtonIcon" parent="WhiteText">
        <item name="android:src">@drawable/happy</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="smallText" parent="WhiteText">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scheduleList">
        <item name="android:layout_weight">0.2</item>
        <item name="android:divider">@color/lightGray</item>
        <item name="android:dividerHeight">0px</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/darkBlue</item>
    </style>

    <style name="blockStartText" parent="smallText">
        <item name="android:shadowColor">@color/darkGray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="blockEndText" parent="smallText">
        <item name="android:shadowColor">@color/darkGray</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>
